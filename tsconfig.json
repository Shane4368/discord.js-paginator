{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist",
		"noEmitOnError": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"ESNext"
		]
	},
	"include": [
		"./src/**/*"
	]
}